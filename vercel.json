{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "src/client/build",
  "framework": "create-react-app",
  "functions": {
    "api/**/*.js": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/index.js" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
} 